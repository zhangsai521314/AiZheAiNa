
@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/Template.cshtml";
}
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
@using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div style="width:500px;margin:200px auto auto auto">
        <div class="form-group">
            <label for="input_ShowName" class="col-sm-2 control-label" AUTOCOMPLETE="off">昵称</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="input_ShowName" name="ShowName" placeholder="请输入您的昵称">
            </div>
        </div>
        <div class="form-group">
            <label for="input_LoginName" class="col-sm-2 control-label">账号</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="input_LoginName" name="LoginName" placeholder="请输入您的账号">
            </div>
        </div>
        <div class="form-group">
            <label for="input_PassWord" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="input_PassWord" name="PassWord" placeholder="请输入您的密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">注册</button>
            </div>
        </div>
    </div>
}

