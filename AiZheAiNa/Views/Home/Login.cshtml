@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div style="width:500px;margin:200px auto auto auto;border:1px solid red">
        <div class="form-group">
            <label for="input_LoginName" class="col-sm-2 control-label">账号</label>
            <div class="col-sm-6">
                <input id="input_LoginName" name="LoginName" class="form-control" type="text" placeholder="请输入您的账号">
            </div>
        </div>
        <div class="form-group">
            <label for="input_PassWord" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-6">
                <input id="input_PassWord" name="PassWord" class="form-control" type="password" placeholder="请输入您的密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">请记住我
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" type="submit">登录</button>
            </div>
        </div>
        <div>
            <span>其他方式登录:</span><a href="/Home/QQLogin"><img src="~/Content/Images/qq/qqQiEr.png" /></a>
        </div>
    </div>
    <script src="~/Scripts/jq/jquery-2.1.4/jquery.js"></script>
