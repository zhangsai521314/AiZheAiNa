
@{
    ViewBag.Title = "ErJi";
    Layout = "~/Views/Shared/Template.cshtml";
}
<style type="text/css">
    div {
        margin: 0px;
        padding: 0px;
    }

    .divAllGoodsErJi > div {
        width: 1450px;
        margin: 10px auto auto auto;
        background-color: #f8f5f5;
    }
    /*复杂查询条件样式*/
    .divSelectOption-1 {
        height: 40px;
        overflow: hidden;
        /*transition-duration 设置过渡*/
        transition-duration: 0.5s;
        /* Firefox 4 */
        -moz-transition-duration: 0.5s;
        /* Safari and Chrome */
        -webkit-transition-duration: 0.5s;
        /* Opera */
        -o-transition-duration: 0.5s;
    }

    .divSelectOption-2, .divSelectOption-3 {
        float: left;
    }

    .divSelectOption-2, .divSelectOption-4 {
        width: 6%;
        text-align: center;
        margin-top: 5px;
    }

    .divSelectOption-4 {
        float: right;
    }

    .divSelectOption-3 {
        width: 85%;
        margin-left: 8px;
    }

        .divSelectOption-3 > ul > li {
            min-width: 12%;
            text-align: center;
            margin-top: 5px;
            height: 30px;
            line-height: 30px;
        }

            .divSelectOption-3 > ul > li:nth-child(odd) {
                background-color: #d3d0d0;
            }

            .divSelectOption-3 > ul > li:nth-child(even) {
                background-color: #808080;
            }
    /*简单查询样式*/
    .divSimpleSelectOption {
        height: 40px;
    }

    .divSimpleSelectOption-1 {
        float: left;
    }

    .divSimpleSelectOption-2 {
        float: right;
    }

    .divSimpleSelectOption-1 > ul li {
        border-right: 1px solid #d3d0d0;
    }

        .divSimpleSelectOption-1 > ul li:last-child {
            border-right: 0px;
        }
    /*详细内容样式*/
    .divAllGoodsErJiContent {
        background-color: #f8f5f5;
    }

        .divAllGoodsErJiContent > ul li {
            background-color: #f8f5f5;
            margin-top: 5px;
        }

    .divAllGoodsErJiContent-1 {
        text-align: center;
        width: 348px;
        position: relative;
    }

    .divAllGoodsErJiContent-miaoshu {
        text-align: left;
        height: 20px;
        background-color: #00ff21;
        width: 348px;
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 2;
    }

    .divAllGoodsErJiContent-shoucangANGgouwuche {
        width: 250px;
        margin: 0 auto;
        height: 30px;
    }

        .divAllGoodsErJiContent-shoucangANGgouwuche span:first-child {
            display: block;
            float: left;
            height: 20px;
        }

        .divAllGoodsErJiContent-shoucangANGgouwuche span:last-child {
            display: block;
            height: 20px;
            float: right;
        }

    .divAllGoodsErJiContent a {
        cursor: pointer;
    }

    .ulAllGoodsErJiContentImgMin li {
        border: 1px solid #ffffff;
        margin-top: 10px;
        margin-bottom: 30px;
    }

    .divAllGoodsErJiContent-img {
        height: 200px;
        margin-top: 30px;
        margin-bottom: 15px;
    }

    /*设置hove时的阴影效果开始*/
    .divAllGoodsErJiContent-1 {
        /*transition-duration 设置过渡*/
        transition-duration: 0.5s;
        /* Firefox 4 */
        -moz-transition-duration: 0.5s;
        /* Safari and Chrome */
        -webkit-transition-duration: 0.5s;
        /* Opera */
        -o-transition-duration: 0.5s;
    }

        .divAllGoodsErJiContent-1:hover {
            /*设置阴影*/
            filter: progid:DXImageTransform.Microsoft.Shadow(color=#909090,direction=120,strength=3); /*ie*/
            -moz-box-shadow: 5px 5px 10px #909090; /*firefox*/
            -webkit-box-shadow: 5px 5px 10px #909090; /*safari或chrome*/
            box-shadow: 5px 5px 10px #909090; /*opera或ie9*/
        }
    /*设置hove时的阴影效果结束*/
</style>
