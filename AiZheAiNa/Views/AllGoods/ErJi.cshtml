        height: 40px;
    }

    .divSimpleSelectOption-1 {
        float: left;
    }

    .divSimpleSelectOption-2 {
        float: right;
    }

    .divSimpleSelectOption-1 > ul li {
        border-right: 1px solid #d3d0d0;
    }

        .divSimpleSelectOption-1 > ul li:last-child {
            border-right: 0px;
        }

    .divAllGoodsErJiContent > ul > li {
        padding-left: 0;
        padding-right: 0;
        margin-left: 5px;
        margin-right: 5px;
        background-color: #ffffff;
        margin-bottom: 16px;
    }

    .divAllGoodsErJiContent-1 {
        text-align: center;
        width: 293px;
        position: relative;
    }

    .divAllGoodsErJiContent-miaoshu {
        text-align: left;
        height: 20px;
        background-color: #00ff21;
        width: 293px;
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 2;
    }

    .divAllGoodsErJiContent-shoucangANGgouwuche {
        width: 250px;
        margin: 0 auto;
        height: 30px;
        padding-top: 20px;
    }

        .divAllGoodsErJiContent-shoucangANGgouwuche span:first-child {
            display: block;
            float: left;
            height: 20px;
        }

        .divAllGoodsErJiContent-shoucangANGgouwuche span:last-child {
            display: block;
            height: 20px;
            float: right;
        }

    .divAllGoodsErJiContent a {
        cursor: pointer;
    }

    .ulAllGoodsErJiContentImgMin > li {
        border: 1px solid #ffffff;
        margin-top: 10px;
        margin-bottom: 30px;
    }

        .ulAllGoodsErJiContentImgMin > li > img {
            border: 1px solid #ffffff;
        }

            .ulAllGoodsErJiContentImgMin > li > img:hover {
                border: 1px solid #ffd800;
                cursor: pointer;
            }

    .divAllGoodsErJiContent-img {
        height: 200px;
        margin-top: 30px;
        margin-bottom: 15px;
    }

    /*设置hove时的阴影效果开始*/
    .divAllGoodsErJiContent-1 {
        /*transition-duration 设置过渡*/
        transition-duration: 0.5s;
        /* Firefox 4 */
        -moz-transition-duration: 0.5s;
        /* Safari and Chrome */
        -webkit-transition-duration: 0.5s;
        /* Opera */
        -o-transition-duration: 0.5s;
    }

        .divAllGoodsErJiContent-1:hover {
            /*设置阴影*/
            filter: progid:DXImageTransform.Microsoft.Shadow(color=#909090,direction=120,strength=3); /*ie*/
            -moz-box-shadow: 5px 5px 10px #909090; /*firefox*/
            -webkit-box-shadow: 5px 5px 10px #909090; /*safari或chrome*/
            box-shadow: 5px 5px 10px #909090; /*opera或ie9*/
        }
    /*设置hove时的阴影效果结束*/
