<script id="divSelectOption" type="text/x-handlebars">
    @*多条件查询模板*@
    {{#each this }}
    <div class="divSelectOption-1">
        <div class="divSelectOption-2">{{divDaoHangLianJie_leftName}}</div>
        <div class="divSelectOption-3">
            <ul class="mylist-inline" leixing="{{leixing}}">
                {{#with divDaoHangLianJie_Content}}
                {{#each this}}
                <li>
                    {{content}}
                </li>
                {{/each}}
                {{/with}}
            </ul>
        </div>
        <div class="divSelectOption-4 min">更多</div>
    </div>
    {{/each}}
</script>

<script id="divAllGoodsContent" type="text/x-handlebars">
    @*商品展示*@
    <ul class="mylist-inline">
        {{#each this}}
        <li leixing="{{leixing}}" shopid="{{id}}">
            <div class="divAllGoodsErJiContent-1">
                <div class="divAllGoodsErJiContent-shoucangANGgouwuche">
                    <span>收藏</span>
                    <span>加入</span>
                </div>
                <div class="divAllGoodsErJiContent-img">
                    <a href="/Buy/ErJi?id={{id}}"><img src="{{maxImgsrc}}" alt="{{maxImgAlt}}" /></a>
                </div>
                <p><a href="/Buy/ErJi?id={{id}}">小米耳机</a></p>
                <p>{{jiage}}</p>
                <ul class="mylist-inline ulAllGoodsErJiContentImgMin">
                    {{#with minImg}}
                    {{#each this}}
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    {{/each}}
                    {{/with}}
                </ul>
                {{#if miaoshu}}
                <div class="divAllGoodsErJiContent-miaoshu">
                    {{miaoshu}}
                </div>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ul>
</script>


