<script type="text/javascript">
    $(".divSelectOption-4").click(function () {
        if ($(this).is(".min")) {
            $(this).removeClass("min").addClass("max");
            $(this).parent().height(40 * Math.ceil($(this).prev().find("ul li").length / 8) - Math.ceil($(this).prev().find("ul li").length / 8) * 2);

        } else {
            $(this).removeClass("max").addClass("min");
            $(this).parent().height("40px");
        }
    });
</script>

