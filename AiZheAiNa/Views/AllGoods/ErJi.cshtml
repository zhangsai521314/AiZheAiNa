            </ul>
        </div>
        <div class="divSelectOption-4 min">更多</div>
    </div>
    {{/each}}
</script>

<script id="divAllGoodsContent" type="text/x-handlebars">
    @*商品展示*@
    <ul class="my-list-inline">
        {{#each this}}
        <li leixing="{{leixing}}" shopid="{{id}}">
            <div class="divAllGoodsErJiContent-1">
                <div class="divAllGoodsErJiContent-shoucangANGgouwuche">
                    <a style="display:block;float:left">收藏</a>
                    <a style="display:block;float:right">加入</a>
                </div>
                <div class="divAllGoodsErJiContent-img">
                    <a href="/Buy/ErJi?id={{id}}"><img src="{{maxImgsrc}}" alt="{{maxImgAlt}}" /></a>
                </div>
                <p><a href="/Buy/ErJi?id={{id}}">小米耳机</a></p>
                <p>{{jiage}}</p>
                <ul class="my-list-inline ulAllGoodsErJiContentImgMin">
                    {{#with minImg}}
                    {{#each this}}
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    <li>
                        <img src="{{src}}" alt="{{alt}}" />
                    </li>
                    {{/each}}
                    {{/with}}
                </ul>
                {{#if miaoshu}}
                <div class="divAllGoodsErJiContent-miaoshu">
                    {{miaoshu}}
                </div>
                {{/if}}
            </div>
        </li>
        {{/each}}
    </ul>
</script>


